<!doctype html>
<html>
<head>
	<title>Crows Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container">

	<div class="jumbotron text-center">
		<h1><span class="fa fa-lock"></span> Crows Authentication</h1>
        
        <!-- LOGIN FORM -->
	<form action="/login" method="post">
		<div class="form-group">
			<label>Email</label>
			<center><input type="text" class="form-control" name="email" style="width:400px;"></center>
		</div>
		<div class="form-group">
			<label>Password</label>
            <center><input type="password" class="form-control" name="password" style="width:400px;"></center>
		</div>

		<button type="submit" class="btn btn-primary btn-lg">Login</button>
	</form>

	<hr>

		<p>Login or Register with:</p>
		<a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a>
	</div>

</div>
</body>
</html>